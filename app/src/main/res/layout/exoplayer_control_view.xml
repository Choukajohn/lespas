<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/extra_padding"
    android:paddingHorizontal="@dimen/video_player_controls_right_margin">

    <ImageButton
        android:id="@+id/exo_mute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/small_padding"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_volume_on_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@id/exo_play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/exo_mute"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/small_padding"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_play_arrow_24"
        tools:ignore="ContentDescription" />

    <ImageButton
        android:id="@id/exo_pause"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/exo_mute"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/small_padding"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_baseline_pause_24"
        tools:ignore="ContentDescription" />

    <View
        android:id="@id/exo_progress_placeholder"
        android:layout_width="0dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="@id/exo_mute"
        app:layout_constraintLeft_toRightOf="@id/exo_mute"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="@dimen/big_padding"
        android:layout_marginRight="56dp"
        tools:ignore="RtlHardcoded" />

</androidx.constraintlayout.widget.ConstraintLayout>